<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_layout_title"
        android:text="activity_main.xml :"
        android:textSize="20sp"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/codexml"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Xml Code"
        android:gravity="start"
        android:layout_below="@id/text_layout_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_java_title"
        android:text="MainActivity.java :"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_below="@id/codexml"/>

    <EditText
        android:id="@+id/codejava"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:hint="Java Code"
        android:gravity="start"
        android:layout_below="@id/text_java_title"/>

</RelativeLayout>